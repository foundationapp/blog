{
  "name": "foundationapp/blog",
  "description": "Blog is a Simple Laravel Blog Package",
  "autoload": {
    "psr-4": {
      "Foundationapp\\Blog\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Foundationapp\\Blog\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Bobby Iliev",
      "email": "bobby@bobbyiliev.com"
    }
  ],
  "extra": {
    "laravel": {
      "providers": [
        "Foundationapp\\Blog\\BlogServiceProvider"
      ]
    }
  },
  "require-dev": {
    "pestphp/pest-plugin-livewire": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "phpunit/phpunit": "^10.0",
    "orchestra/testbench": "^8.3"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "livewire/livewire": "^2.12"
  }
}
